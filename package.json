{
  "name": "openbase-v2",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "lint:staged": "lint-staged",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "code-quality": "npm run typecheck && npm run lint && npm run format:check",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "commit": "cz",
    "build:check": "next build",
    "hooks:install": "husky && chmod +x .husky/*",
    "hooks:uninstall": "rm -rf .husky",
    "hooks:test": "echo 'feat: test commit message' | npx commitlint",
    "commit:help": "echo 'Use: npm run commit' for guided commits",
    "pre-commit:test": "lint-staged",
    "validate": "npm run typecheck && npm run lint && npm run format:check",
    "clean:hooks": "rm -rf .husky && npx husky init",
    "prepare": "husky",
    "analyze": "ANALYZE=true npm run build",
    "lighthouse": "lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html",
    "perf:audit": "npm run build && npm run lighthouse",
    "sitemap:generate": "node -e \"require('./src/lib/sitemap').writeSitemap()\"",
    "bundle:analyze": "npm run analyze && open .next/analyze/client.html",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:all": "npm run test:ci && npm run test:e2e",
    "playwright:install": "playwright install",
    "deploy": "./scripts/deploy.sh",
    "deploy:preview": "./scripts/preview-deploy.sh",
    "docker:build": "docker build -t openbase-v2 .",
    "docker:run": "docker run -p 3000:3000 openbase-v2",
    "docker:compose": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "vercel:login": "vercel login",
    "vercel:deploy": "vercel deploy",
    "vercel:prod": "vercel deploy --prod",
    "env:check": "node scripts/validate-env.js",
    "health:check": "curl -f http://localhost:3000/api/health || exit 1",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "docs:dev": "storybook dev -p 6006",
    "docs:build": "storybook build",
    "docs:serve": "npx serve storybook-static",
    "docs:api": "npm run dev & open http://localhost:3000/api-docs",
    "docs:deploy": "npm run docs:build && npm run docs:serve",
    "changelog:add": "changeset add",
    "changelog:version": "changeset version",
    "changelog:publish": "changeset publish",
    "docs:generate": "typedoc src --out docs/api",
    "docs:all": "concurrently \"npm run docs:dev\" \"npm run docs:api\""
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^5.2.1",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "isomorphic-dompurify": "^2.26.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.544.0",
    "next": "15.5.3",
    "next-pwa": "^5.6.0",
    "next-themes": "^0.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.62.0",
    "react-textarea-autosize": "^8.5.9",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "workbox-webpack-plugin": "^7.3.0",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@chromatic-com/storybook": "^4.1.1",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3",
    "@faker-js/faker": "^9.9.0",
    "@jest/reporters": "^30.1.3",
    "@playwright/test": "^1.55.0",
    "@storybook/addon-a11y": "^9.1.5",
    "@storybook/addon-docs": "^9.1.5",
    "@storybook/addon-onboarding": "^9.1.5",
    "@storybook/addon-vitest": "^9.1.5",
    "@storybook/nextjs-vite": "^9.1.5",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.13",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-react": "^5.18.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "commitizen": "^4.3.1",
    "concurrently": "^9.2.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-storybook": "^9.1.5",
    "eslint-plugin-unused-imports": "^4.2.0",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^30.1.2",
    "lint-staged": "^15.5.2",
    "msw": "^2.11.2",
    "playwright": "^1.55.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "storybook": "^9.1.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-react": "^5.29.0",
    "tailwindcss": "^4",
    "tsx": "^4.20.5",
    "typedoc": "^0.28.12",
    "typescript": "^5",
    "vitest": "^3.2.4",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.{css,scss}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
